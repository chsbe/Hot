<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<context:property-placeholder location="classpath:be/icode/hot/test/test.properties" />

	<context:annotation-config />
	<bean id="groovyScriptExecutor" class="be.icode.hot.groovy.GroovyScriptExecutor" />
	<bean id="pythonScriptExecutor" class="be.icode.hot.python.PythonScriptExecutor" />
	<bean id="pythonScriptExecutorWithGlobalInit" class="be.icode.hot.python.PythonScriptExecutor">
		<constructor-arg ref="initScriptsPy" />
	</bean>
	<util:list id="initScriptsPy">
		<value>/be/icode/hot/test/init.py</value>
	</util:list>
	<util:list id="initScriptsJs">
		<value>/be/icode/hot/test/init.js</value>
	</util:list>
	<util:list id="lessandcoffee">
		<value>/js/coffee-script.js</value>
		<value>/js/less.js</value>
	</util:list>
	<util:list id="six">
		<value>/js/six.js</value>
	</util:list>

	<bean id="jSScriptExecutorWithGlobalInit" class="be.icode.hot.js.JSScriptExecutor" 
		p:preExecuteScripts-ref="initScriptsJs" p:devMode="true" >
	</bean>
	<bean id="coffeescriptCompilerScriptExecutor" class="be.icode.hot.js.JSScriptExecutor" 
		p:globalScopeScripts-ref="lessandcoffee" p:devMode="true" >
	</bean>
	<bean id="sixJsScriptExecutor" class="be.icode.hot.js.JSScriptExecutor" p:preExecuteScripts-ref="six" p:devMode="true" />
	<bean id="CoffeeScriptCompiler" class="be.icode.hot.js.transpilers.CoffeeScriptCompiler" p:jsScriptExecutor-ref="coffeescriptCompilerScriptExecutor"/>
	<bean id="LessCompiler" class="be.icode.hot.js.transpilers.LessCompiler" p:jsScriptExecutor-ref="coffeescriptCompilerScriptExecutor" />
	<bean id="jSScriptExecutor" class="be.icode.hot.js.JSScriptExecutor" />
	<bean id="sixCompiler" class="be.icode.hot.js.transpilers.SixCompiler" p:jsScriptExecutor-ref="sixJsScriptExecutor" />
	<bean id="jS223ScriptExecutor" class="be.icode.hot.js.JS223ScriptExecutor" />
</beans>
