	<servlet>
		<servlet-name>hot-rest</servlet-name>
		<servlet-class>be.icode.hot.shows.rest.RestClosureServlet</servlet-class>
		<async-supported>true</async-supported>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>hot-rest</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>hot-static</servlet-name>
		<servlet-class>be.icode.hot.web.AsyncStaticResourceServlet</servlet-class>
		<async-supported>true</async-supported>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>hot-static</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
